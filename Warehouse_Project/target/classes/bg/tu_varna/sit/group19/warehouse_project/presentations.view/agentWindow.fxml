<BorderPane prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bg.tu_varna.sit.group19.warehouse_project.presentation.controllers.AgentWindowController">
   <left>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="900.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="ShowAvailableWarehousesButton" layoutX="5.0" layoutY="260.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="390.0" text="Show available warehouses">
               <font>
                  <Font size="22.0" />
               </font></Button>
            <Button fx:id="GiveWarehouseOnRentButton" layoutX="5.0" layoutY="200.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="390.0" text="Give warehouse on rent">
               <font>
                  <Font size="22.0" />
               </font></Button>
            <Button fx:id="ShowOwnersWarehousesButton" layoutX="5.0" layoutY="320.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="390.0" text="Show owner's warehouses">
               <font>
                  <Font size="22.0" />
               </font></Button>
            <Button fx:id="RentHistoryButton" layoutX="5.0" layoutY="380.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="390.0" text="Renter history">
               <font>
                  <Font size="22.0" />
               </font></Button>
            <Label fx:id="userType" layoutX="5.0" layoutY="28.0" prefHeight="40.0" prefWidth="200.0" text="Agent">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <Label fx:id="userFullName" layoutX="5.0" layoutY="100.0" prefHeight="30.0" prefWidth="390.0">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button fx:id="SettingsButton" layoutX="230.0" layoutY="10.0" mnemonicParsing="false" prefHeight="75.0" prefWidth="75.0" text="Settings" />
            <Button fx:id="LogOutButton" layoutX="315.0" layoutY="10.0" mnemonicParsing="false" prefHeight="75.0" prefWidth="75.0" text="Log out" />
         </children>
      </AnchorPane>
   </left>
   <center>
      <AnchorPane fx:id="mainAnchorPane" minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="500.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
